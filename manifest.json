{
  "manifest_version": 3,
  "name": "Base64 Buddy",
  "version": "1.0",
  "description": "Encode/Decode files in Base64",
  "permissions": ["storage", "clipboardWrite", "tabs"],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_title": "Open Base64 Buddy"
  },
  "web_accessible_resources": [
    {
      "resources": ["app/base64.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
